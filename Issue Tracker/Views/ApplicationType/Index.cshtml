@model IEnumerable<Issue_Tracker.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New Application Type</a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td width="80%">@i.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@i.Id" class="btn btn-warning mx-2">Edit</a>
                                <form asp-action="Delete" asp-route-Id="@i.Id" method="post">
                                    <input type="submit" class="btn btn-danger mx-2" value="Delete" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No Application Exists</h1>
    }
</div>

